{% extends 'base.html.twig' %}

{% block title %}Vos sorties
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="text-center underlined">Vos sorties</h1>
		<h4 class="mt-3">Cette page vous permet de consulter vos sorties.</h4>

		<div class="table-responsive mt-5">
			<table class="table table-hover table-stripped">
				<thead class="thead-dark">
					<tr>
						<th>Type de sortie</th>
						<th>Date de début</th>
						<th>Date de fin</th>
						<th>Durée</th>
						<th>Distance</th>
						<th>Commentaire</th>
                        <th>-</th>
					</tr>
				</thead>
				<tbody>
					{% if outings > 0 %}
						{% for outing in outings %}
							<tr>
								<td>{{outing.outingType.title}}</td>
                                <td>{{outing.startDate | date('d/m/Y h:m:s')}}</td>
                                <td>{{outing.endDate | date('d/m/Y h:m:s')}}</td>
                                <td>{{outing.duration}}</td>
                                <td>{{outing.distance}}</td>
                                <td>{{outing.comment | raw}}</td>
                                <td>
                                    <a href="#" class="btn btn-warning">
										<i class="fas fa-pen"></i>
									</a>
									<a href="#" class="btn btn-danger">
										<i class='fas fa-trash'></i>
									</a>
                                </td>
							</tr>
						{% endfor %}
					{% else %}
						<tr>
							<td colspan="5" class="text-center">
								Aucune sortie n'a été trouvée...
							</td>
						</tr>
					{% endif %}
				</tbody>
			</table>
		</div>
	</div>
{% endblock %}
