{% extends 'base.html.twig' %}

{% block title %}Types de sorties
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="text-center underlined">Les types de sorties</h1>
		<h4 class="mt-3">Cette page vous permet de consulter les différents types de sorties.</h4>

		<p>
			Vous souhaitez ajouter un nouveau type de sortie ?
			<a href="{{path('outing_type_add')}}" class="btn btn-success">Cliquez-ici</a>
		</p>
		<div class="table-responsive mt-5">
			<table class="table table-hover table-stripped">
				<thead class="thead-dark">
					<tr>
						<th>N°</th>
						<th>Nom</th>
						<th>-</th>
					</tr>
				</thead>
				<tbody>
					{% if outingTypes is defined and outingTypes is not empty %}
						{% for outingType in outingTypes %}
							<tr>
                                <td>{{outingType.id}}</td>
								<td>{{outingType.title}}</td>
								<td>
									<a href="{{path('outing_type_edit', {'outingType': outingType.id})}}" class="btn btn-warning">
										<i class="fas fa-pen"></i>
									</a>
									<a href="{{path('outing_type_delete', {'outingType': outingType.id})}}" class="btn btn-danger">
										<i class='fas fa-trash'></i>
									</a>
								</td>
							</tr>
						{% endfor %}
					{% else %}
						<tr>
							<td colspan="9" class="text-center">
								Aucun type de sortie n'a été trouvé...
							</td>
						</tr>
					{% endif %}
				</tbody>
			</table>
		</div>
	</div>
{% endblock %}
